    </div>
  </div>

  <div class="flex flex-row mt-[5%]">
    <!-- item1 -->
    <div class="flex flex-col justify-left text-left items-baseline ml-[8.5%] mb-0 gap-0 p-0 z-2">
        <div class="text-[125px]">
          <div>
            <div class="text-zinc-500 hover:text-zinc-400">
              <TextAnimation text="hello,"client:load/>
            </div>
            <div class="text-zinc-500 hover:text-zinc-400">
