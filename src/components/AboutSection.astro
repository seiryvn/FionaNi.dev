---
import TextAnimation from "./custom_components/TextAnimation"
import BackgroundGradientV3 from "../assets/BackgroundGradientV3.png"
import WaguriPlaceholder from "../assets/WaguriPlaceholder.jpg"
---


<div class="m-[5%]">
    <img id="background" src={BackgroundGradientV3.src} alt="" fetchpriority="high"/>
    <!-- main div -->
    <div class="flex flex-col justify-center items-center align-middle text-8xl mb-[3%]">
        <div class="text-black hover:text-zinc-700">
            <TextAnimation text="about me" client:load/>
        </div>
        <!-- information section -->
        <div class="mt-[3%]">
            <div id="card container">
                <!-- first card -->
                <div id="card" class="flex flex-col gap-[2%] text-4xl bg-black p-[10%] rounded-2xl hover:drop-shadow-2xl hover:drop-shadow-gray-500">
                    <img class="rounded-2xl" src={WaguriPlaceholder.src} alt="Placeholder Image" width="350" height="350"
                    />
                    <div class="mt-5 text-gray-200">
                        <h1>fiona ni</h1>
                        <h1 class="text-2xl">@ boston college '2029</h1>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

<style>
    #background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -2;
		filter: blur(400px);
	}
</style>