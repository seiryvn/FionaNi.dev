---
import TextAnimation from "./custom_components/TextAnimation"
import BackgroundGradientV3 from "../assets/BackgroundGradientV3.png"
---


<div class="m-[5%]">
    <img id="background" src={BackgroundGradientV3.src} alt="" fetchpriority="high"/>
    <!-- main div -->
    <div class="flex flex-col justify-center items-center align-middle text-8xl mb-[3%]">
        <div class="text-black hover:text-zinc-700">
            <TextAnimation text="about me" client:load/>
        </div>
        <!-- information section -->
        <div class="mt-[3%]">
            <div id="card" class="flex flex-col gap-[1%] text-4xl">
                <h1>Name</h1>
                <h1>Student Information</h1>
            </div>
        </div>
    </div>
</div>

<style>
    #background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -2;
		filter: blur(400px);
	}
</style>